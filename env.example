# Common Environment Variables
DATABASE_URL="postgresql://username:password@localhost:5432/packr_cs"
REDIS_URL="redis://localhost:6379"

# S3/R2 Configuration
S3_BUCKET="packr-cs-storage"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="your-access-key"
S3_SECRET_ACCESS_KEY="your-secret-key"

# Sentry (Error Tracking)
SENTRY_DSN="https://your-sentry-dsn.ingest.sentry.io/123"

# PostHog (Product Analytics)
POSTHOG_KEY="your-posthog-key"

# Auth (Clerk)
CLERK_PUBLISHABLE_KEY="pk_test_your-clerk-key"
CLERK_SECRET_KEY="sk_test_your-clerk-secret"

# API Configuration
PORT=4000
WEBHOOK_TRACKSTAR_SECRET="your-trackstar-webhook-secret"

# Web Configuration
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your-clerk-key"
NEXT_PUBLIC_POSTHOG_KEY="your-posthog-key"
NEXT_PUBLIC_API_BASE="http://localhost:4000"

# Development
NODE_ENV="development"
LOG_LEVEL="info"
